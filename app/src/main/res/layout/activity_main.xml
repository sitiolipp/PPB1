<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hoho"
        android:scaleType="centerCrop"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Siti Kholifah"
        android:paddingBottom="10sp"
        android:gravity="center"
        android:textSize="40sp"
        android:background="#9de0d5"
        android:id="@+id/et_nama"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ini adalah Tugas untuk UTS saya"
        android:paddingBottom="10sp"
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/et_nama1"
        android:layout_below="@id/et_nama"/>

    <ImageView
        android:layout_below="@id/et_nama1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/redrose"
        android:paddingLeft="20sp"
        android:paddingRight="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="25sp"
        android:textColor="#ceeced"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="submit"
        android:id="@+id/toast"/>

  </RelativeLayout
   >